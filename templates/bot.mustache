    <style>
        /* Animation for BKDollar header */
        .bk-dollar-animation {
            font-size: 22px;
            font-weight: bold;
            color: #0f9d58;
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }

        /* Social icons */
        .social-links {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        .social-links a img {
            width: 24px;
            height: 24px;
        }

        /* Marquee */
        .ticker {
            background: #111;
            color: #fff;
            font-size: 14px;
            padding: 4px 0;
            white-space: nowrap;
        }

        /* Custom tabs */
        .custom-tabs {
            display: flex;
            gap: 15px;
            margin-top: 8px;
        }
        .custom-tabs a {
            font-size: 14px;
            font-weight: bold;
            color: #0f9d58;
            text-decoration: none;
        }
        .custom-tabs a:hover {
            text-decoration: underline;
        }
    </style>
</head>

